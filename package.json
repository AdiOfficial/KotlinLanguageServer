{
    "name": "kotlin",
    "displayName": "Kotlin",
    "description": "Kotlin language support",
    "icon": "Icon128.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/georgewfraser/kotlin-language-server.git"
    },
    "version": "0.1.0",
    "publisher": "georgewfraser",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Languages",
        "Linters"
    ],
    "keywords": [
        "kotlin"
    ],
    "activationEvents": [
        "onLanguage:kotlin"
    ],
    "main": "./out/extension",
    "files": [
        "target/KotlinLanguageServer.jar"
    ],
    "contributes": {
        "languages": [
            {
                "id": "kotlin",
                "extensions": [
                    ".kt"
                ],
                "aliases": [
                    "Kotlin"
                ]
            }
        ],
        "configuration": {
            "title": "Java configuration",
            "properties": {
                "java.home": {
                    "type": "string",
                    "description": "Installation directory of Java"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "vscode-languageclient": "^4.0.0"
    }
}
